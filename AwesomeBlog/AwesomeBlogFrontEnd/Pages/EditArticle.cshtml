@page "{id}"
@model AwesomeBlogFrontEnd.EditArticleModel
@{
    ViewData["Title"] = "EditArticle";
}

<div style="margin-left: 18px">
    <h3>Edit Article</h3>
</div>
@if (Model.ShowMessage)
{
    <div class="alert alert-success alert-dismissible col-md-5" role="alert" style="margin-left: 18px">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        @Model.Message
    </div>
}
<form method="post" class="form-horizontal">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input asp-for="Article.Id" type="hidden" />
    <input asp-for="Article.BloggerId" type="hidden" />
    <input asp-for="Article.Published" type="hidden" />
    <div class="form-group">
        <label asp-for="Article.Title" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Article.Title" class="form-control" />
            <span asp-validation-for="Article.Title" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Article.Body" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <textarea asp-for="Article.Body" class="form-control" rows="15"></textarea>
            <span asp-validation-for="Article.Body" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Tags</label>
        <div class="col-md-10">
            <select id="multiple" asp-for="SelectedTagsId" multiple="multiple" class="selectpicker form-control" asp-items="Model.TagsToSelect">
            </select>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10 mt-5">
            <button type="submit" class="btn btn-primary w-45">Save</button>
            <button type="submit" asp-page-handler="Delete" class="btn btn-danger float-right w-45">Delete</button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
